NODE_ENV=development
PORT=3001

# Database
MONGODB_URI=mongodb://localhost:27017/saiv_platform

# Security
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long

# Blockchain Configuration (Choose one)
# Lisk Sepolia Testnet (RECOMMENDED for testing - very cheap gas)
RPC_URL=https://rpc.sepolia-api.lisk.com

# Lisk Mainnet (RECOMMENDED for production - very cheap gas)
# RPC_URL=https://rpc.api.lisk.com

# Alternative Networks:
# Polygon Mumbai Testnet: https://rpc-mumbai.maticvigil.com
# Polygon Mainnet: https://polygon-rpc.com
# Localhost: http://localhost:8545

# GASLESS TRANSACTIONS - Backend Wallet (PAYS ALL GAS FEES)
# This wallet pays gas for user registration, group creation, etc.
# Users never pay gas fees - everything is gasless!
ADMIN_PRIVATE_KEY=your_admin_wallet_private_key_here

# Smart Contract Addresses (after deployment)
ADDRESS_MANAGER_CONTRACT=0x...

# Aave Integration
AAVE_POOL_ADDRESS=0x...
AAVE_LENDING_POOL_ADDRESS=0x...

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here_for_signature_verification
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000

# Rate Limiting (Optional - uses defaults if not set)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_BLOCKCHAIN_MAX=10

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5

# ===================================
# NOTIFICATION SYSTEM CONFIGURATION
# ===================================

# Email Service (SendGrid/Mailgun/Amazon SES)
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_SERVICE_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM_ADDRESS=noreply@saiv.platform
EMAIL_FROM_NAME=Saiv Platform
EMAIL_REPLY_TO=support@saiv.platform

# Alternative Email Providers:
# For Mailgun:
# EMAIL_SERVICE_PROVIDER=mailgun
# MAILGUN_DOMAIN=your-domain.mailgun.org
# MAILGUN_API_KEY=your_mailgun_api_key

# For Amazon SES:
# EMAIL_SERVICE_PROVIDER=ses
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# SMS Service (Twilio/Amazon SNS)
SMS_SERVICE_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Alternative SMS Providers:
# For Amazon SNS:
# SMS_SERVICE_PROVIDER=sns
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Push Notifications (Firebase/OneSignal)
PUSH_SERVICE_PROVIDER=firebase
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# Alternative Push Providers:
# For OneSignal:
# PUSH_SERVICE_PROVIDER=onesignal
# ONESIGNAL_APP_ID=your_onesignal_app_id
# ONESIGNAL_API_KEY=your_onesignal_api_key

# Notification Settings
NOTIFICATION_QUEUE_ENABLED=true
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000
NOTIFICATION_BATCH_SIZE=50
NOTIFICATION_RATE_LIMIT=100

# External APIs
PRICE_FEED_API_KEY=your_price_feed_api_key